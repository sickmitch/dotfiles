{
	"pyprland": {
		"plugins": [
			"scratchpads",
			"expose",
      "toggle_special"
		]
	},
	"scratchpads": {
		"term": {
			"command": "kitty --class kitty-dropterm",
			"unfocus": "hide",
			"animation": "fromTop",
      "margin": 47
    },
    "volume": {
    "animation" : "fromRight",
    "command" : "pavucontrol",
    "class" : "pavucontrol-dropterm",
    "size" : "40% 80%",
    "unfocus" : "hide",
    "lazy" : true,
    "margin": 14
    }
	}
}
